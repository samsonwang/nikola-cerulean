<%def name="html_head_start()">
<!DOCTYPE html>
<html prefix='og: http://ogp.me/ns# article: http://ogp.me/ns/article#\
% if comment_system == 'facebook':
fb: http://ogp.me/ns/fb#\
% endif
'\
% if is_rtl:
dir="rtl"\
% endif
\
lang="${lang}">
    <head>
    <meta charset="utf-8">
    % if use_base_tag:
    <base href="${abs_link(permalink)}">
    % endif
    % if description:
    <meta name="description" content="${description|h}">
    % endif
    <meta name="viewport" content="width=device-width, initial-scale=1">
    % if title == blog_title:
        <title>${blog_title|h}</title>
    % else:
        <title>${title|h} | ${blog_title|h}</title>
    % endif

    ${html_stylesheets()}
    <meta name="theme-color" content="${theme_color}">
    % if meta_generator_tag:
    <meta name="generator" content="Nikola (getnikola.com)">
    % endif
    ${feeds_translations.head()}
    <link rel="canonical" href="${abs_link(permalink)}">

    % if favicons:
        % for name, file, size in favicons:
            <link rel="${name}" href="${file}" sizes="${size}"/>
        % endfor
    % endif

    % if comment_system == 'facebook':
        <meta property="fb:app_id" content="${comment_system_id}">
    % endif

    % if prevlink:
        <link rel="prev" href="${prevlink}" type="text/html">
    % endif
    % if nextlink:
        <link rel="next" href="${nextlink}" type="text/html">
    % endif

    ${mathjax_config}

    % if use_cdn:
        <!--[if lt IE 9]><script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    % else:
        <!--[if lt IE 9]><script src="${url_replacer(permalink, '/assets/js/html5.js', lang, url_type)}"></script><![endif]-->
    % endif

    ${extra_head_data}
</%def>


<%def name="html_head_end()">
</head>
</%def>


