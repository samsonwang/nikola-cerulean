<%def name="sidebar_categories_old()">
<div class="sidebar-module">
% if cat_items:
<!-- sidebar categories -->
  <h4>${messages("Categories")}</h4>
  % for text, full_name, path, link, indent_levels, indent_change_before, indent_change_after in cat_hierarchy:
